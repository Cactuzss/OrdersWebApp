@page
@model OrderCEModel

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/orderce.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body>
    <div class="upper">
        <div class="upper--textbox">Заказ </div> <textarea id="orderId" class="upper--textbox" > @Model.OrderID </textarea>
        <div class="upper--left">
            <button id="editButton" onclick="onSave();"> Сохранить </button>
            <button id="backButton" onclick="window.location.replace(url);"> Назад </button>
        </div>
    </div>
    <div class="order--info">
        <div class="order--date">
            <label for="start-date">Дата </label>
            <input type="date" id="start-date">
        </div>
        <div class="order--provider">
            <label for="provider">Поставщик </label>
            <select id="provider" class="order--provider-select"></select>
        </div>
        <div>
            Информация о заказе
        </div>
        <div class="lower">
            <table id="items" class="items--table">
                <tr>
                    <th>
                        Название элемента
                    </th>
                    <th>
                        Количество
                    </th>
                    <th>
                        Единица измерения
                    </th>
                    <th> Удалить </th>
                </tr>
            </table>
            <div>
                <button onclick="addItem();" class="add-button">+</button>
            </div>
        </div>
    </div>

</body>

<script type="text/javascript" src="~/js/orderce.js"></script>